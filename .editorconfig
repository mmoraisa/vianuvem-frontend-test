# top-most EditorConfig file
root = true

#Padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Estilo de identação em arquivos HTML
[*.html]
indent_style = tab
indent_size = 4

# Estilo de identação em arquivos CSS
[*.css]
indent_style = tab
indent_size = 4

# Estilo de identação em arquivos JS
[*.js]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true
